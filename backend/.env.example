# Backend Environment Variables

# Server
PORT=4000
NODE_ENV=production

# Frontend URL (for CORS)
FRONTEND_URL=https://soft-ig.vercel.app

# Database (same as frontend)
DATABASE_URL=postgresql://user:password@host:5432/softig
REDIS_URL=redis://host:6379

# Encryption (same as frontend)
ENCRYPTION_KEY=your-32-byte-hex-key

# API Security
BACKEND_API_SECRET=your-backend-secret

# Scraper Settings
SCRAPER_MAX_RETRIES=3
SCRAPER_DELAY_MIN=2000
SCRAPER_DELAY_MAX=5000
