# Database
DATABASE_URL="postgresql://softig:softig_dev_password@localhost:5432/softig"
REDIS_URL="redis://localhost:6379"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="<generate-with-openssl-rand-base64-32>"

# Encryption (CRITICAL - 64 hex chars = 32 bytes)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY="<generate-with-node-crypto-randomBytes-32-hex>"

# Scraper Settings
SCRAPER_MAX_RETRIES="3"
SCRAPER_DELAY_MIN="2000"
SCRAPER_DELAY_MAX="5000"

# Backend API
BACKEND_API_URL="http://localhost:4000"
BACKEND_API_SECRET="<random-secret-string>"

# VAPID Keys for Push Notifications
# Generate with: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY="<your-public-key>"
VAPID_PRIVATE_KEY="<your-private-key>"
